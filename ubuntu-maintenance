sudo killall apt-fast apt-get apt aptitude >/dev/null 2>&1
sudo dpkg --configure -a


## Apt-Fast install
/bin/bash -c "$(curl -sL https://git.io/vokNn)" >/dev/null 2>&1
apt-fast update -y >/dev/null 2>&1
apt-fast upgrade -y

## if item got held back this will install it if it can be found
apt-fast install -y "$(sudo apt list --upgradable | cut -f1 -d'/' | sed 's/Listing...//g' | grep '\S')" >/dev/null 2>&1

## Multimedia install without ttf-mscorefonts-installer due to no possible way to have no user input
apt-fast install -y software-properties-common
sudo add-apt-repository multiverse -y >/dev/null 2>&1
apt-fast install -y ubuntu-restricted-addons libavcodec-extra unrar

## Required for ucare
apt-fast install -y deborphan >/dev/null 2>&1

## Ucare Run
sudo /bin/bash -c "$(curl -sL https://git.io/JnX8B)"

if [ -f /var/run/reboot-required ]; then
        echo
        echo "* * * * * * * * * * * * * * * * * *"
        echo "*                                 *"
        echo "*      Rebooting your system      *"
        echo "*                                 *"
        echo "* * * * * * * * * * * * * * * * * *"
        echo
        sudo reboot
fi
